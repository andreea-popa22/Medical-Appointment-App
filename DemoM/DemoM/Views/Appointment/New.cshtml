@model DemoM.Models.Appointment

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - New Appointment</title>
    <link rel="stylesheet" type="text/css" media="all" href="~/Content/site.css" />
</head>
<body>
    <br />
    <h2 class="heading-font" style="margin-left:14rem; margin-bottom: 2rem;">New appointment</h2>
    <div class="container">
        <div class="col-md-6">
            <div class="panel panel-default radius-div edit-div" style="margin-left:15%; padding-left:4rem;">
                <br />
                @using (Html.BeginForm(actionName: "New", controllerName: "Appointment"))
                {
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.Type, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Type, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
                        </div>
                        <br />
                    </div>
                    <br />
                    <div class="form-group">
                        @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Date, new { type = "date" })<br />
                            @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
                        </div>
                        <br />
                    </div>
                    <br />
                    <div class="form-group">
                        <label class="control-label col-md-2">Pacient</label>
                        <div class="col-md-10">
                            @Html.DropDownListFor(m => m.PatientId, new SelectList(Model.PatientsList, "Value", "Text"),
                          "Select pacient", new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.PatientId, "", new { @class = "text-danger" })
                        </div>
                        <br />
                    </div>
                    <br />
                    <div class="form-group">
                        <label class="control-label col-md-2">Doctor</label>
                        <div class="col-md-10">
                            @Html.DropDownListFor(m => m.DoctorId, new SelectList(Model.DoctorsList, "Value", "Text"),
                          "Select doctor", new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.DoctorId, "", new { @class = "text-danger" })
                        </div>
                        <br />
                    </div>
                    <br />
                    <div class="form-group text-center">
                        <input type="submit" value="Create" class="btn btn-sm btn-success" />

                    </div>
                }
            </div>
        </div>
        <div class="col-md-6">
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
        </div>
    </div>
    <br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br />
    @*@section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }*@
</body>
</html>