<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MedApp</title>
    <environment include="Development">
        <link rel="stylesheet" href="~/StaticFiles/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/StaticFiles/lib/bootstrap/dist/css/bootstrap-grid.css" />
        <link rel="stylesheet" href="~/StaticFiles/lib/bootstrap/dist/css/bootstrap-reboot.css" />
        <link rel="stylesheet" type="text/css" media="all" href="~/StaticFiles/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="~/StaticFiles/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/StaticFiles/css/site.min.css" />
    </environment>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-nav">
                <ul class="nav">
                    <li>@Html.ActionLink("MedApp", "Index", "Home", null, new { @class = "navbar-brand white-link" })</li>
                    <li>@Html.ActionLink("Appointments", "Index", "Appointment", null, new { @class = "navbar-brand white-link" })</li>
                    <li>@Html.ActionLink("Patients", "Index", "Patient", null, new { @class = "navbar-brand white-link" })</li>
                    <li>@Html.ActionLink("Doctors", "Index", "Doctor", null, new { @class = "navbar-brand white-link" })</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
    <div class="my-footer-container">
        <footer class="bg-light text-center text-lg-start">
            <button class="pull-right" onclick="toTopFunction()" id="scroll-to-top" title="Go to top">&uarr;</button>
            <div class="text-center p-3" style="background-color: #053957;">
                <br />
                <p class="nav-font" style="color:white;">&copy; @DateTime.Now.Year - MedApp Application</p>
                <br />
            </div>
        </footer>
    </div>

    <script src="~/StaticFiles/js/Layout.js" language="javascript"></script>
</body>
</html>
