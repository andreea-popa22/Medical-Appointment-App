<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MedApp</title>
    @Styles.Render("/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("MedApp", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-link">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Appointments", "Index", "Appointment")</li>
                    <li>@Html.ActionLink("Patients", "Index", "Patient")</li>
                    <li>@Html.ActionLink("Doctors", "Index", "Doctor")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
    <div class="my-footer-container">
        <footer class="bg-light text-center text-lg-start">
            <button class="pull-right" onclick="toTopFunction()" id="scroll-to-top" title="Go to top">&uarr;</button>
            <div class="text-center p-3" style="background-color: #053957;">
                <br />
                <p class="nav-font" style="color:white;">&copy; @DateTime.Now.Year - MedApp Application</p>
                <br />
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="../../Scripts/Layout.js" language="javascript"></script>
</body>
</html>
