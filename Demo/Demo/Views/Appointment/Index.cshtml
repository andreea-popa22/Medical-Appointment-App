@model IEnumerable<Demo.Models.Appointment>

@{
    ViewBag.Title = "Appointments";
}

<h2>Appointments</h2>
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.Label("Patient")
        </th>
        <th>
            @Html.Label("Doctor")
        </th>

        @*<th>
            @Html.Label("Medical Center")
        </th>*@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patient.Name)
                @Html.DisplayFor(modelItem => item.Patient.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Doctor.Name)
                @Html.DisplayFor(modelItem => item.Doctor.Surname)
            </td>
            <td>
                    <a class="btn btn-primary pull-left" href="/Appointment/Edit/@item.AppointmentId">Edit</a>
                    <a class="btn btn-info pull-left" href="/Appointment/Show/@item.AppointmentId">Details</a>
                    <form method="post" action="/Appointment/Delete/@item.AppointmentId">
                        @Html.HttpMethodOverride(HttpVerbs.Delete)
                        <button class="btn btn-danger pull-right" style="border: none; " type="submit">Delete</button>
                    </form>
            </td>
        </tr>
    }

</table>
<br />
<a class="btn btn-success" href="/Appointment/New">Add appointment</a>
<br />
